declare module 'posthtml-parser' {
  declare type PostHTMLNode = {
    tag: string,
    attrs?: { [string]: string, ... },
    content?: Array<string>,
    ...
  };

  declare var parser: (
    html: string,
    options?: {
      lowerCaseAttributeNames?: boolean,
      lowerCaseTags?: boolean,
      sourceLocations?: boolean,
      ...
    }
  ) => PostHTMLNode;

  declare module.exports: typeof parser;
}
